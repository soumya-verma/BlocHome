<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>
    <% include partials/header.ejs %>
    <div class="container">
      <div class="cover">
        <div class="overlay w3-display-container">
          <div
            class="w3-display-middle"
            style="width: 500px; color: #fff; margin-top: 30px"
          >
            <i style="display: block; margin-bottom: 10px"
              ><span
                >Search and buy your dream house in 2 clicks. Buy / Sell
                property on <b>BlocHome</b></span
              ></i
            >
            <form action="/search" method="POST">
              <div class="searchbar-container w3-card-4">
                <input
                  type="search"
                  name="search"
                  placeholder="Search by location/owner name..."
                  required
                />
                <button class="search-button">
                  <span class="fa fa-search"></span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div style="text-align: center; margin-top: 70px">
        <h2><b style="border-bottom: 3px solid #0099ff55">Top Bids</b></h2>
      </div>
      <div class="property-container">
        <div class="w3-row">
          <div class="w3-third">
            <div class="w3-card-4 property">
              <table>
                <tr>
                  <td><span class="fa fa-user"></span>&nbsp; Owner</td>
                  <td>Tony Stark</td>
                </tr>
                <tr>
                  <td><span class="fa fa-money"></span> Price</td>
                  <td>10ETH</td>
                </tr>
                <tr>
                  <td>
                    <span class="fa fa-map-marker"></span>&nbsp;&nbsp;Location
                  </td>
                  <td>Mumbai, Maharashtra</td>
                </tr>
              </table>
            </div>
          </div>
          <div class="w3-third">
            <div class="w3-card-4 property">
              <table>
                <tr>
                  <td><span class="fa fa-user"></span>&nbsp; Owner</td>
                  <td>Peter Parker</td>
                </tr>
                <tr>
                  <td><span class="fa fa-money"></span> Price</td>
                  <td>8ETH</td>
                </tr>
                <tr>
                  <td>
                    <span class="fa fa-map-marker"></span>&nbsp;&nbsp;Location
                  </td>
                  <td>New Delhi</td>
                </tr>
              </table>
            </div>
          </div>
          <div class="w3-third">
            <div class="w3-card-4 property">
              <table>
                <tr>
                  <td><span class="fa fa-user"></span>&nbsp; Owner</td>
                  <td>Harry Potter</td>
                </tr>
                <tr>
                  <td><span class="fa fa-money"></span> Price</td>
                  <td>11ETH</td>
                </tr>
                <tr>
                  <td>
                    <span class="fa fa-map-marker"></span>&nbsp;&nbsp;Location
                  </td>
                  <td>Hyderabad, Andhra Pradesh</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container" style="background-color: #ddd">
      <div style="text-align: center; margin-top: 70px">
        <h2>
          <b style="border-bottom: 3px solid #0099ff55">Properties for sale</b>
        </h2>
      </div>
      <div class="property-container">
        <% include partials/components/forsale.ejs %>
      </div>
    </div>

    <div class="row" style="display: none">
      <div
        class="col-10 offset-1"
        style="background-color: bisque; height: 200px"
      >
        <% include partials/components/status.ejs %>
      </div>
    </div>

    <!-- </div> -->
    <% include partials/footer.ejs %> <% include partials/jsincludes.ejs %>
  </body>
</html>
